{
  "name": "ovs-backend",
  "version": "1.0.0",
  "description": "Serverless webpack example using Typescript",
  "main": "handler.js",
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:colorfy/ovs-backend.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/git"
    ]
  },
  "scripts": {
    "start": "npx apollo service:push --tag=offline && sls offline start",
    "debug": "node --inspect --debug-port=9229 node_modules/serverless/bin/serverless offline start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "npx git-cz",
    "release": "npx semantic-release",
    "commitizen": "exec < /dev/tty && git cz",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "deploy": "yarn deploy:dev",
    "deploy:dev": "sls deploy --stage dev --region eu-central-1 && npx apollo service:push --tag=dev",
    "deploy:live": "sls deploy --stage live --region us-east-1 && npx apollo service:push --tag=live",
    "remove:dev": "sls remove --stage dev --region eu-central-1",
    "remove:live": "sls remove --stage live --region us-east-1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "apollo-server-cache-redis": "^1.1.4",
    "apollo-server-lambda": "^2.9.4",
    "apollo-server-plugin-response-cache": "^0.3.4",
    "graphql-import": "^0.7.1",
    "mongoose": "^5.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/commit-analyzer": "^6.3.0",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/npm": "^5.1.15",
    "@semantic-release/release-notes-generator": "^7.3.0",
    "@types/aws-lambda": "^8.10.33",
    "@types/node": "^12.7.8",
    "apollo": "^2.18.3",
    "aws-sdk": "^2.538.0",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^4.0.0-beta.1",
    "semantic-release": "^15.13.24",
    "serverless": "^1.53.0",
    "serverless-offline": "^5.11.0",
    "serverless-plugin-warmup": "^4.7.0-rc.1"
  },
  "author": "Khaled Osman",
  "license": "MIT"
}
